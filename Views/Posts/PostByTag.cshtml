@model IEnumerable<Post>
@{
    ViewData["Title"] = ViewData["tag"] + " Tags";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tag = ViewData["tag"];

}

<div class="container my-5">
    <div class="row squareimage" >
        <div class="col-md-12">

            <div class="cat-title">@tag</div>
        </div>
        @foreach (var item in Model)
        {


            <div class="col-md-4">


                <a href="/posts/details/@item.Id">
                    <div class="card">
                        @if (item.Picture == null)
                        {

                            <img src="/uploads/five.jpg" />
                        }
                        else
                        {
                            <img class="card-img-top" src="~/uploads/@item.Picture" alt="" />
                        }
                    <div class="card-body">
                        @item.Name
                        <div class="time text-dark">
                            <i class="fas fa-clock"></i> @item.CreatedDate.ToString("dddd, dd MMMM yyyy")
                        </div>
                    </div>
                    </div>
                </a>
            </div>
        }

    </div>
</div>

